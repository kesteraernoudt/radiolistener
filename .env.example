# Example .env file for Radiolistener
# Do NOT put real secrets into this file in source control.

# Telegram bot token (from BotFather)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-here"

# Telegram chat id where alerts are posted (numeric id or channel username)
TELEGRAM_CHAT_ID=1234567890

# API key for the generative AI client (GEMINI_API_KEY used in code)
GEMINI_API_KEY="your-genai-or-gemini-api-key"

# API key for Groq (optional fallback when Gemini is limited)
GROQ_API_KEY="your-groq-api-key"

# API key for Mistral (optional fallback after Groq)
MISTRAL_API_KEY="your-mistral-api-key"

# Override Groq model if desired (default: openai/gpt-oss-120b; fallback tries llama-3.1-8b-instant, llama-3.3-70b-versatile)
# GROQ_MODEL="openai/gpt-oss-120b"

# Override Mistral model if desired (default: mistral-small-latest; fallback tries mistral-large-latest, open-mixtral-8x7b)
# MISTRAL_MODEL="mistral-small-latest"

# Which AI provider to use: auto, gemini, groq, mistral
# auto order: gemini primary -> mistral primary -> groq primary, then their fallbacks in that order
AI_PROVIDER="auto"
